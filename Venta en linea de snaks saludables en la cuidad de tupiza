  <script>
    function addToForm(product, price){
      const select = document.getElementById('productoSelect');
      const option = document.createElement('option');
      option.text = product + ' — Bs.'+price;
      option.selected = true;
      select.add(option, 0);
      document.getElementById('pedido').scrollIntoView({behavior:'smooth'});
    }

    function submitOrder(e){
      e.preventDefault();
      const nombre = document.getElementById('clienteNombre').value;
      const telefono = document.getElementById('clienteTelefono').value;
      const producto = document.getElementById('productoSelect').value;
      const cantidad = document.getElementById('cantidad').value;
      alert('Pedido recibido:\n' + nombre + '\n' + telefono + '\n' + producto + ' x' + cantidad + '\n\nNos contactaremos para confirmar.');
      document.getElementById('orderForm').reset();
    }
  </script>
